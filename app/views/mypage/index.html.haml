          %p 出品する
          %i.fas.fa-chevron-right
        .container__side-bar__information__detail
          %p 出品した商品−出品中
          %i.fas.fa-chevron-right
        .container__side-bar__information__detail
          %p 出品した商品−取引中
          %i.fas.fa-chevron-right
        .container__side-bar__information__detail
          %p 出品した商品−売却済
          %i.fas.fa-chevron-right
        .container__side-bar__information__detail
          %p 購入した商品−取引中
          %i.fas.fa-chevron-right
        .container__side-bar__information__detail
          %p 購入した商品−過去の取引
          %i.fas.fa-chevron-right
        .container__side-bar__information__detail
          %p 購入した商品−売却済
          %i.fas.fa-chevron-right
        .container__side-bar__information__detail
          %p 評価一覧
          %i.fas.fa-chevron-right
        .container__side-bar__information__detail
          %p お問い合わせ
          %i.fas.fa-chevron-right
      .container__side-bar__paymemt
        .container__side-bar__paymemt__title
          %p FURIペイ
        .container__side-bar__paymemt__detail
          %p 売り上げ・振り込み申請
          %i.fas.fa-chevron-right
        .container__side-bar__paymemt__detail
          %p ポイント
          %i.fas.fa-chevron-right
      .container__side-bar__configuration
