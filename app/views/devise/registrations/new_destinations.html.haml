.signIn
  .header
    .header__image
      = image_tag "/logo/logo.png", size: "300x100"
    %nav.header__progress
      %ol
        %li.header__progress__text__passive{ id: "first" }
          会員情報
          .header__progress__round__passive
        %li.header__progress__text__active
          送付先住所入力
          .header__progress__round__active
        %li.header__progress__text{ id: "end" }
          登録完了
          .header__progress__round__passive
  .input
    %h1.input__name
      送付先住所入力
    = form_for @destination, class:"input__group" do |f|
      = render "devise/shared/error_messages", resource: @destination
      .input__group__content
        %label.input__group__content__label
          送付先氏名
        %span.input__group__content__required
          必須
        %br
        = f.text_field :destination_family_name, {placeholder:"例）笹錦",class:'input__group__content__name'}
        = f.text_field :destination_first_name, {placeholder:"例）太郎",class:'input__group__content__name'}

      .input__group__content
        %label.input__group__content__label
          送付先氏名（カナ）
        %span.input__group__content__required
          必須
        %br
        = f.text_field :destination_family_name_kana, {placeholder:"例）ササニシキ",class:'input__group__content__name'}
        = f.text_field :destination_first_name_kana, {placeholder:"例）太郎",class:'input__group__content__name'}

      .input__group__content
        %label.input__group__content__label
          郵便番号
        %span.input__group__content__required
          必須
        %br
        = f.text_field :post_code, {autofocus: true, placeholder: "例）ハイフンなし", class: 'input__group__content__box'}

      .input__group__content
        %label.input__group__content__label
          都道府県
        %span.input__group__content__required
          必須
        %br
        = f.text_field :prefecture, {autofocus: true, placeholder: "例）大阪府", class: 'input__group__content__box'}

      .input__group__content
        %label.input__group__content__label
          市区町村
        %span.input__group__content__required
          必須
        %br
        = f.text_field :city, {autofocus: true, placeholder: "例）東大阪市", class: 'input__group__content__box'}

      .input__group__content
        %label.input__group__content__label
          番地
        %span.input__group__content__required
          必須
        %br
        = f.text_field :address, {autofocus: true, placeholder: "例）松原1-4-1", class: 'input__group__content__box'}

      .input__group__content
        %label.input__group__content__label
          建物名
        %span.input__group__content__any
          任意
        %br
        = f.text_field :building_name, {autofocus: true, placeholder: "例）東堂ビルF９", class: 'input__group__content__box'}

      .input__group__content
        %label.input__group__content__label
          電話番号
        %span.input__group__content__any
          任意
        %br
        = f.text_field :phone_number, {autofocus: true, placeholder: "例）090-1234-5678", class: 'input__group__content__box'}
        

      .input__group__content__btn
        = f.submit "登録する", class: "input__group__content__btn__tag"

  .footer
    %ul.footer__content
      %li.footer__content__text
        = link_to "プライバシーポリシー"
      %li.footer__content__text
        = link_to "フリマ利用規約"
      %li.footer__content__text
        = link_to "特定商法取引に関する規約"
      .footer__image
        = link_to image_tag "/logo/logo.png", size: "200x50"
        